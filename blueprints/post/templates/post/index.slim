- extends 'layout.slim'
- from 'helpers.slim' import delete_button

- block content
  table class="table"
    thead
      tr
        th Title
        th Body
        %th
        %th
        %th
    tbody
      - for post in object_list
        tr
          td = post.title
          td = post.body
          td
            a.btn.btn-mini.btn-info href="{{ url_for('.show', id\=post.id) }}" Show
          td
            a.btn.btn-mini.btn-info href="{{ url_for('.edit', id\=post.id) }}" Edit
          td
            = delete_button(url_for('.delete', id\=post.id), 'Delete')

  a href="=url_for('.new')" class="btn btn-primary btn-small" New post
